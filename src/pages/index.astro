          class="sm:row-start-4 sm:row-end-5 sm:col-start-2 sm:col-end-3 md:row-start-2 md:row-end-4 md:col-start-5 md:col-end-7"
        >
          Computer Science and Technology, 2020 - 2024
        </HighlightCard>
        <HighlightCard
          title="Bachelor of Science @UESTC"
          icon={uestc}
          class="sm:row-start-5 sm:row-end-6 sm:col-start-1 sm:col-end-2 md:row-start-4 md:row-end-6 md:col-start-5 md:col-end-7"
        >
