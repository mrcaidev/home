      class="flex items-center gap-1.5 sm:gap-2 flex-wrap mt-3 sm:mt-4"
    >
      <ContactLink
        to="mailto:mrcaidev@gmail.com"
        icon="i-simple-icons-gmail"
        title="Email"
        class="hover:text-red-500"
      >
        Email
      </ContactLink>
      <ContactLink
        to="https://github.com/mrcaidev"
        icon="i-simple-icons-github"
        title="GitHub"
        class="hover:text-gray-400"
      >
        GitHub
      </ContactLink>
      <ContactLink
        to="https://www.linkedin.com/in/mrcaidev"
        icon="i-simple-icons-linkedin"
        title="LinkedIn"
        class="hover:text-blue-500"
      >
        LinkedIn
      </ContactLink>
      <ContactLink
        to="https://x.com/mrcaidev"
        icon="i-simple-icons-x"
        title="X"
        class="hover:text-gray-400"
      >
        X
      </ContactLink>
      <ContactLink
        to="https://space.bilibili.com/35364718"
        icon="i-simple-icons-bilibili"
        title="Bilibili"
        class="hover:text-pink-400"
      >
        Bilibili
      </ContactLink>
