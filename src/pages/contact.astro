---
import ContactForm from "components/ContactForm";
import PlatformCard from "components/PlatformCard.astro";
import DetailPage from "layouts/DetailPage.astro";
import { Github, Mail, Music, Tv, Twitter } from "preact-feather";

const platforms = [
  {
    name: "Mail",
    icon: Mail,
    href: "mailto:mrcaidev@gmail.com",
  },
  {
    name: "GitHub",
    icon: Github,
    href: "https://github.com/mrcaidev",
  },
  {
    name: "Netease Music",
    icon: Music,
    href: "https://music.163.com/#/user/home?id=391273836",
  },
  {
    name: "Twitter",
    icon: Twitter,
    href: "https://twitter.com/mrcaidev",
  },
  {
    name: "Bilibili",
    icon: Tv,
    href: "https://space.bilibili.com/35364718",
  },
];
---

<DetailPage
  title="Contact"
  description="Reach me in various ways. Let's connect!"
>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-16 pt-12">
    <section class="animate-leftslide">
      <h2 class="mb-6 font-bold text-2xl">Via e-mail</h2>
      <div>
        <ContactForm client:idle />
      </div>
    </section>
    <section class="animate-rightslide">
      <h2 class="mb-6 font-bold text-2xl">Via platforms</h2>
      <ul class="flex flex-wrap gap-4">
        {
          platforms.map((platform) => (
            <li>
              <PlatformCard {...platform} />
            </li>
          ))
        }
      </ul>
    </section>
  </div>
</DetailPage>
