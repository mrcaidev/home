---
import BaseHead from "./BaseHead.astro";

export interface Props {
  title: string;
  description: string;
  publishedAt: string;
}

const { title, description, publishedAt } = Astro.props;
const ogImage = "https://og.mrcai.dev/api/blog?title=" + title;
const publishedTime = new Date(publishedAt).toISOString();
---

<BaseHead title={title} description={description} image={ogImage}>
  <meta property="og:type" content="article" />
  <meta property="article:published_time" content={publishedTime} />
  <meta property="article:author" content={Astro.site} />
  <meta property="article:section" content="Programming" />
</BaseHead>
