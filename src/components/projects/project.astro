---
export type Props = {
  title: string;
  description: string;
  href: string;
  image: string;
};
const { title, description, href, image } = Astro.props;
---

<div
  class="relative h-full rounded-md bg-graydark-3 hover:bg-graydark-4 active:bg-graydark-5 overflow-hidden transition-colors"
>
  <img src={image} alt="" loading="lazy" />
  <div class="px-5 py-4">
    <a href={href} target="_blank" class="block mb-1 font-medium">
      {title}
      <span class="absolute top-0 bottom-0 left-0 right-0"></span>
    </a>
    <p class="text-sm text-graydark-11">{description}</p>
  </div>
</div>
