---
export interface Props {
  name: string;
  href: string;
}

const { name, href } = Astro.props;
const isCurrent = Astro.url.pathname.startsWith(href);
---

<a
  href={href}
  aria-current={isCurrent ? "page" : "false"}
  class:list={[
    "px-2 py-1 font-semibold text-lg hover:text-highlight text-center",
    { "text-highlight": isCurrent },
  ]}
  >{name}
</a>
