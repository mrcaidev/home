---
import type { FunctionalComponent } from "preact";
import type { FeatherProps } from "preact-feather/dist/types";

export interface Props {
  name: string;
  icon: FunctionalComponent<FeatherProps>;
  href: string;
}

const { name, icon: Icon, href } = Astro.props;
---

<a
  href={href}
  target="_blank"
  rel="noreferrer"
  class="flex justify-between items-center gap-3 px-4 py-3 rounded-lg bg-slate-200 dark:bg-slate-800 hover:bg-slate-300 dark:hover:bg-slate-700 font-medium text-lg shadow"
>
  <Icon size={20} />
  {name}
</a>
