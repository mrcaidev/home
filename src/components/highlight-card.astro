---
import type { ImageMetadata } from "astro";
import type { HTMLAttributes } from "astro/types";
import { Image } from "astro:assets";

interface Props extends HTMLAttributes<"div"> {
  title: string;
  icon: ImageMetadata;
  class: string;
}

const { title, icon, class: classNames } = Astro.props;
---

<div
  class:list={[
    "@container min-w-72 sm:min-w-auto p-5 rounded-lg bg-gray-900 bg-opacity-70 hover:bg-opacity-100 transition-colors shadow-md snap-start",
    classNames,
  ]}
>
  <div
    class="flex flex-col @sm:flex-row justify-center @sm:justify-start items-center gap-x-6 gap-y-4 size-full"
  >
    <Image src={icon} alt="" class="size-20" />
    <div class="space-y-1 text-center @sm:text-start">
      <h3 class="font-medium md:text-lg">{title}</h3>
      <p class="text-sm md:text-base text-gray-400">
        <slot />
      </p>
    </div>
  </div>
</div>
