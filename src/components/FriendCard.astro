---
import { Link } from "preact-feather";

export interface Props {
  title: string;
  description: string;
  avatar: string;
  url: string;
}

const { title, description, avatar, url } = Astro.props;
const { host } = new URL(url);
---

<div
  class="flex flex-col sm:flex-row justify-center sm:justify-start items-center flex-wrap gap-x-8 gap-y-6 relative px-6 py-6 rounded-xl hover:bg-slate-200 dark:hover:bg-slate-800"
>
  <img src={avatar} alt={`Avatar of ${title}`} class="w-24" />
  <div class="flex flex-col items-center sm:items-start gap-y-2 text-center">
    <h2 class="font-bold text-xl">{title}</h2>
    <p>{description}</p>
    <a
      href={url}
      target="_blank"
      rel="noreferrer"
      class="flex items-center gap-2 text-slate-600 dark:text-slate-400 hover:text-sky-800 dark:hover:text-sky-200"
    >
      <Link size={14} class="inline" />{host}
      <span class="absolute top-0 left-0 right-0 bottom-0"></span>
    </a>
  </div>
</div>
