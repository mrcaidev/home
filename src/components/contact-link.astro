---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {
  icon: string;
}

const { href, icon, title, class: classNames } = Astro.props;
---

<a
  href={href}
  title={title}
  target="_blank"
  class:list={["p-2 rounded-md text-gray-200/80 transition-colors", classNames]}
>
  <span class:list={[icon, "size-5.5 sm:size-6"]}></span>
  <span class="sr-only">
    <slot />
  </span>
</a>
